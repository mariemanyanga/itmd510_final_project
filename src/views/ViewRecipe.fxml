    <TextArea fx:id="name" editable="false" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    
    <Label text="Description: " GridPane.columnIndex="0" GridPane.rowIndex="2"> </Label>
    <TextArea fx:id="description" editable="false" prefHeight="100.0" prefWidth="200.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    
    <Label text="Category: " GridPane.columnIndex="0" GridPane.rowIndex="3"> </Label>
